@section Scripts
    {
    <script src="~/lib/signalr/signalr.js"></script>
    <script>
        var gauge1, gauge2, gauge3
        var gauge4, gauge5, gauge6
        var gauge7, gauge8, gauge9

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/monitor")
            .configureLogging(signalR.LogLevel.Trace)
            .build();

        connection.on('UpdateReport3', function (data) {
            if (!gauge1)
                gauge1 = document.getElementById("Gauge01").ej2_instances[0];
            if (!gauge2)
                gauge2 = document.getElementById("Gauge02").ej2_instances[0];
            if (!gauge3)
                gauge3 = document.getElementById("Gauge03").ej2_instances[0];
            if (!gauge4)
                gauge4 = document.getElementById("Gauge04").ej2_instances[0];
            if (!gauge5)
                gauge5 = document.getElementById("Gauge05").ej2_instances[0];
            if (!gauge6)
                gauge6 = document.getElementById("Gauge06").ej2_instances[0];
            if (!gauge7)
                gauge7 = document.getElementById("Gauge07").ej2_instances[0];
            if (!gauge8)
                gauge8 = document.getElementById("Gauge08").ej2_instances[0];
            if (!gauge9)
                gauge9 = document.getElementById("Gauge09").ej2_instances[0];

            value01 = data.power;
            value02 = data.energyCharging;
            value03 = data.energyTotal;
            value04 = data.currentL1;
            value05 = data.currentL2;
            value06 = data.currentL3;
            value07 = data.voltageL1N;
            value08 = data.voltageL2N;
            value09 = data.voltageL3N;

            gauge1.setAnnotationValue(0, 0, "<text class='h4'>" + value01.toFixed(3) + " kW</text>");
            gauge2.setAnnotationValue(0, 0, "<text class='h4'>" + value02.toFixed(2) + " kWh</text>");
            gauge3.setAnnotationValue(0, 0, "<text class='h4'>" + value03.toFixed(1) + " kWh</text>");
            gauge4.setAnnotationValue(0, 0, "<text class='h4'>" + value04.toFixed(1) + " A</text>");
            gauge5.setAnnotationValue(0, 0, "<text class='h4'>" + value05.toFixed(1) + " A</text>");
            gauge6.setAnnotationValue(0, 0, "<text class='h4'>" + value06.toFixed(1) + " A</text>");
            gauge7.setAnnotationValue(0, 0, "<text class='h4'>" + value07.toFixed(3) + " V</text>");
            gauge8.setAnnotationValue(0, 0, "<text class='h4'>" + value08.toFixed(3) + " V</text>");
            gauge9.setAnnotationValue(0, 0, "<text class='h4'>" + value09.toFixed(3) + " V</text>");

            gauge1.setPointerValue(0, 0, value01);
            gauge2.setPointerValue(0, 0, value02);
            gauge3.setPointerValue(0, 0, value03);
            gauge4.setPointerValue(0, 0, value04);
            gauge5.setPointerValue(0, 0, value05);
            gauge6.setPointerValue(0, 0, value06);
            gauge7.setPointerValue(0, 0, value07);
            gauge8.setPointerValue(0, 0, value08);
            gauge9.setPointerValue(0, 0, value09);
        });

        connection.start()
            .then(function () {
                connection.invoke('UpdateReport3')
                    .catch(error => {
                        console.log('Invocation of UpdateReport3 failed. Error: ' + error);
                        alert('Update failed with error: ' + error);
                    });
            })
            .catch(error => {
                console.log('Could not connect to SignalR server. Error: ' + error);
                alert('Could not connect to monitor hub.');
            });
    </script>
}
