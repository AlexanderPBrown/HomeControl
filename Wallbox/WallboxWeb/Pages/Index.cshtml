                    <e-circulargauge-axis minimum="0" maximum="10">
                        <e-axis-annotations>
                            <e-axis-annotation angle="180" radius="120%" content=""></e-axis-annotation>
                        </e-axis-annotations>
                        <e-axis-minorticks color="transparent"></e-axis-minorticks>
