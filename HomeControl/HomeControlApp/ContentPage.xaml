                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <custom:CircularGauge x:Name="FroniusGauge04" Grid.Column="0" Title="Current DC" Format="0.000 A" StartValue="0" EndValue="10" Interval="1"/>
